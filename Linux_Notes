kernel version
  uname -a
  uname -v
  uname -r
  
  ---------------------------------------------------------------------------------
  
 ip address
   ifconfig
                    Output:
                    inet addr:  192.168.0.10
                    bcast: 192.168.0.255
                    IPV6 addr
                    
---------------------------------------------------------------------------------

create directory 
  mkdir 
  mkdir somefolder/folder{1..5}
  
create file
  touch
                                    
---------------------------------------------------------------------------------  

delete
  rm 
  rmdir
  rmdir delfolder/*         (removes empty dirs)
  
  rm -r             (-r stands for recursive (delets all inside the folder))
  rm -r delfolder/
  rm -ri               (would ask for every file)
  
---------------------------------------------------------------------------------

copy
  cp
  cp file1.txt file2.txt 
  
  cp - r copy_me/ destination/            (copy dir with its' content)
  
---------------------------------------------------------------------------------

move
  mv oldname.txt newname.txt
  mv oldfolder/ newfolder
  
move and rename
  mv -/Documents/newfolder/ ./jackpot   (new folder will be created and all the content from newfolder will be moved to Documents) 

---------------------------------------------------------------------------------
calendar
  cal 
  
clear
  clear
  
date
  date
  
all recent commands
  history
  !2 (select a command #2)
  !! (run most recent command)
  
-y

